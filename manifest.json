{
  "manifest_version": 2,

  "name": "My PDF",
  "version": "1",

  "background": {
    "scripts": ["background/background.js"],
    "persistent": false
  },

  "browser_action": {
    "default_icon": "assets/icon/printer_16.png",
    "icons": { "16": "assets/icon/printer_16.png",
                "32": "assets/icon/printer_32.png",
              "128": "assets/icon/printer_128.png" }
  },

  "content_scripts": [
  ],

  "permissions": [
    "tabs",
    "activeTab",
    "*://*/*",
    "downloads"
  ],

  "web_accessible_resources": [
    "assets/*",
    "fonts/*",
    "webfonts/*"
  ],

  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
